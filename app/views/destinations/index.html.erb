<h1>Destinations</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">City, State</th>
      <th scope="col">Tags</th>
    </tr>
  </thead>
  <tbody>
    <% @destinations.each do |destination| %>
      <tr class="table-active">
        <th scope="row"><%= link_to destination.name, destination_path(destination) %></th>
        <td><%= destination.description %></td>
        <td><%= destination.city_state %></td>
        <td><%= link_to destination.top_tag.title, tag_path(destination.top_tag) unless destination.tags.empty? %></td>
        <% if current_user.admin %>
          <td><%= link_to 'Show', destination %></td>
          <td><%= link_to 'Edit', edit_destination_path(destination) %></td>
          <td><%= link_to 'Destroy', destination, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
