<p id="notice"><%= notice %></p>

<p>
  <strong>Road Trip:</strong>
  <%= @road_trip.title %>
</p>
<p>
  <strong>Description:</strong>
  <%= @road_trip.description %>
</p>

<p>
  <strong>Destinations:</strong><br>
  | <% @road_trip.destinations.each do |destination| %>
      <%= destination.name %> |
  <% end %>
</p>

<% if current_user.id == @road_trip.author_id %>
  <%= link_to 'Edit', edit_road_trip_path(@road_trip) %> |
<% end %>
<%= link_to 'Back', road_trips_path %>
